<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/gray9"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".edit.Edit_Address">


    <EditText
        android:id="@+id/Address_City"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/white"
        android:ems="10"
        android:hint="City"
        android:paddingLeft="20dp"
        android:textAlignment="textStart"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.089" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/Address_Cancel"
            android:layout_marginLeft="15dp"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="Cancel"
            android:textColor="@color/black"
            android:textSize="15sp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="20dp"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/Address_title"
            android:layout_width="145dp"
            android:layout_height="wrap_content"
            android:text="Address"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:gravity="center_horizontal"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/Address_City"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="178dp" />

        <Button
            android:id="@+id/Address_done"
            android:layout_width="100dp"
            android:layout_height="45dp"
            android:textSize="15sp"
            android:gravity="center_horizontal"
            android:text="Done"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="15dp"
            tools:layout_editor_absoluteX="315dp"
            tools:layout_editor_absoluteY="12dp"
            tools:ignore="MissingConstraints" />


    </LinearLayout>

    <EditText
        android:id="@+id/Address_Street"
        android:textAlignment="textStart"
        android:layout_marginTop="30dp"
        android:paddingLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/white"
        android:ems="10"
        android:hint="Street"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Address_City" />

    <EditText
        android:id="@+id/Address_house_num"
        android:textAlignment="textStart"
        android:layout_marginTop="30dp"
        android:paddingLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/white"
        android:ems="10"
        android:hint="House Number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Address_Street" />

    <EditText
        android:id="@+id/Address_phone_num"
        android:textAlignment="textStart"
        android:layout_marginTop="30dp"
        android:paddingLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/white"
        android:ems="10"
        android:hint="Phone Number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Address_house_num" />

</androidx.constraintlayout.widget.ConstraintLayout>